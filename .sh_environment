[ -n "$PS1" ] && echo '(.sh_environment)'

#
# Where am I
#
hostname="`hostname | sed 's/\..*//'`"

#
# Call OS specific environment files
#
if [ -r ~/.sh_environment.$OSTYPE ] ; then
    . ~/.sh_environment.$OSTYPE
fi


#
# Call workstation specific environment file
#
if [ -r ~/.sh_environment.$hostname ] ; then
    . ~/.sh_environment.$hostname
fi

