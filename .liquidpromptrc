# Read the defaults
. ~/bin/liquidprompt/liquidpromptrc-dist

# Our changed settings

LP_USER_ALWAYS=0
LP_ENABLE_LOAD=0
LP_ENABLE_BATT=0
LP_ENABLE_SUDO=1
LP_ENABLE_RUNTIME=1
LP_RUNTIME_THRESHOLD=10
