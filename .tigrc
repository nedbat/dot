set vertical-split = no
set line-graphics = utf-8
set main-view = line-number:no,interval=5 id:no date:default author:abbreviated,maxwidth=20 commit-title:yes,graph,refs,overflow=no
set blame-view = id:yes,color file-name:no author:abbreviated,maxwidth=20 date:default line-number:yes,interval=1 text
set mouse = yes
set ignore-case = true
#set git-colors = no
source ~/.gitglobal/molokai-like-theme.tigrc

# vim-like
bind generic g none
bind generic gg move-first-line
bind main    G move-last-line
bind generic G move-last-line
